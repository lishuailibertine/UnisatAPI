{
    "compilerOptions": {
      "target": "ES2015",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "noEmit": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "AMD",
      "moduleResolution": "NodeNext",
      "resolveJsonModule": false,
      "typeRoots": ["node_modules/@types"]
    },
    "exclude": [
      "./node_modules"
    ],
    "include": [
      "src/**/*"
    ]
  }
  